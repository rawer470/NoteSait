@model FileViewModel
<h1>Upload Part</h1>


@foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
{
        <div>
        <span style="color: red;"> @error.ErrorMessage</span>
    </div>
}



<form action="AddFile" enctype="multipart/form-data" method="post">
    <div class="mb-3">
        <label class="form-label">Choose your Albums</label>
        @Html.DropDownList("albums", ViewBag.AlbumsSelectList as SelectList)
    </div>
    <div class="mb-3">
        <label class="form-label">Choose your photos</label>
        <input asp-for="formFiles" value="@Model.formFiles" class="form-control" type="file" name="formFiles" multiple>
    </div>
    <div class="form-group">
        <label for="">Name</label>
        <input type="text" asp-for=Name name="Name" value="@Model.Name" class="form-control" placeholder="Name">
    </div>
    <div class="form-group">
        <label for="">Message</label>
        <input type="text" asp-for=Message class="form-control" value="@Model.Message" name="Message"
            placeholder="Message">
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>