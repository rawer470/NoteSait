@using NoteSait.Models.ViewModel;
@model AlbumViewModel
<h1>Add Album</h1>


@foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
{
    <div>
    <span style="color: red;"> @error.ErrorMessage</span>
</div>
}

<form action="AddAlbum" enctype="multipart/form-data" method="post">
    <div class="mb-3">
        <label class="form-label">Choose your photos</label>
        <input asp-for="formFiles" value="@Model.formFiles" class="form-control" type="file" name="formFiles" multiple>
    </div>
    <div class="form-group">
        <label asp-for="Name">Name</label>
        <input type="text" asp-for=Name name="Name" value="@Model.Name" class="form-control" placeholder="Name">
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>