@model RegistrationModel

<h4>Registration</h4>

<div asp-validation-summary="All" class="text-danger"></div>

<form asp-action="Registration" method="post">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="EmailAddress"></label>
        <input asp-for="EmailAddress" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Password"></label>
        <div class="input-button-container">
            <input type="password" id="password-input" asp-for="Password" class="form-control" />
            <a style="margin-right: 5px;" href="#" onclick="return show_hide_password(this);">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                    class="bi bi-eye-fill" viewBox="0 0 16 16">
                    <path d="M10.5 8a2.5 2.5 0 1 1-5 0 2.5 2.5 0 0 1 5 0" />
                    <path
                        d="M0 8s3-5.5 8-5.5S16 8 16 8s-3 5.5-8 5.5S0 8 0 8m8 3.5a3.5 3.5 0 1 0 0-7 3.5 3.5 0 0 0 0 7" />
                </svg>
            </a>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="RepeatPassword"></label>
        <div class="input-button-container">
            <input type="password" id="password-input2" asp-for="RepeatPassword" class="form-control" />
            <a style="margin-right: 5px;" href="#" onclick="return show_hide_password2(this);">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                    class="bi bi-eye-fill" viewBox="0 0 16 16">
                    <path d="M10.5 8a2.5 2.5 0 1 1-5 0 2.5 2.5 0 0 1 5 0" />
                    <path
                        d="M0 8s3-5.5 8-5.5S16 8 16 8s-3 5.5-8 5.5S0 8 0 8m8 3.5a3.5 3.5 0 1 0 0-7 3.5 3.5 0 0 0 0 7" />
                </svg>
            </a>
        </div>
    </div>

    <button style="margin-top: 10px; margin-right: 10px;" type="submit" class="btn btn-primary">Registration</button>
    <a style="margin-top: 10px;" asp-action="Index" asp-controller="Home" class="btn btn-secondary">Cancel</a>
</form>